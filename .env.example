# ========================================
# CORE CONFIGURATION
# ========================================
NODE_ENV=production
PORT=3001

# ========================================
# DATABASE
# ========================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://fetisch_user:CHANGE_ME@localhost:5432/fetisch_dating

# ========================================
# REDIS (Cache & Sessions)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# JWT AUTHENTICATION
# ========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHARACTER_STRING
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# ========================================
# FRONTEND
# ========================================
NEXT_PUBLIC_API_URL=https://your-domain.ch/api
NEXT_PUBLIC_DOMAIN=your-domain.ch

# ========================================
# AWS S3 (Photo Storage)
# ========================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=fetisch-dating-photos

# Alternative: Infomaniak Swiss Backup (S3-kompatibel)
# S3_ENDPOINT=https://s3.pub1.infomaniak.cloud
# S3_ACCESS_KEY=your_infomaniak_access_key
# S3_SECRET_KEY=your_infomaniak_secret_key
# S3_BUCKET=fetisch-dating

# ========================================
# EMAIL (SMTP)
# ========================================
# Infomaniak SMTP
SMTP_HOST=mail.infomaniak.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@your-domain.ch
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@your-domain.ch

# ========================================
# SECURITY
# ========================================
CORS_ORIGIN=https://your-domain.ch
ALLOWED_ORIGINS=https://your-domain.ch,https://www.your-domain.ch

# ========================================
# ML SERVICE
# ========================================
ML_SERVICE_URL=http://localhost:5000
ML_API_KEY=your_ml_api_key

# ========================================
# MONITORING (Optional)
# ========================================
# Sentry Error Tracking
SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxxx

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOG LEVEL
# ========================================
LOG_LEVEL=info
